{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-unverified-commits.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/block-make-command.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/block-ctx-file.sh"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-ctx-file.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-ctx-file.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/block-asm-edits.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-ctx-file.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/block-asm-edits.sh"
          }
        ]
      }
    ]
  }
}
